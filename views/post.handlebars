<section class="blog-posts">
  <section class="card" id="post-{{post.id}}">
    <section class="card-header" id="post-{{post.id}}">
      <h3>{{post.post_title}}</h3>
      <p>posted by {{post.user.username}}</p>
    </section>
    <section class="card-content">
      <p>
        {{post.post_content}}
      </p>
    </section>
  </section>

  <section class="card comments">
    <section class="card-header">
      <h3>Comments:</h3>
    </section>
    {{#each comments as |comment|}}
      <section class="card-content">
        <p>
          {{comment.comment}}
        </p>
        <p>{{comment.user.username}} on 5/23/20</p>

      </section>
    {{/each}}
    <button class="btn comment-btn" id="comment-button">Add a comment</button>
  </section>

</section>