<section class="blog-posts">
  <section class="card" id="post-{{post.id}}">
    <section class="card-header" id="post-{{post.id}}">
      <h3>{{post.post_title}}</h3>
      <p>posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    </section>
    <section class="card-content">
      <p>
        {{post.post_content}}
      </p>
    </section>
  </section>

  <section class="card comments">
    <section class="card-header">
      <h3>Comments:</h3>
    </section>
    {{#each comments as |comment|}}
      <section class="card-content">
        <p>
          {{comment.comment}}
        </p>
        <p>{{comment.user.username}} on {{format_date comment.createdAt}}</p>

      </section>
    {{/each}}
    <form class="form comment-form">
      <div class="form-group new-comment">
        <input
          class="form-input"
          type="text"
          id="comment-content"
          placeholder="add your comment here"
        />

        <button class="btn comment-btn" id="comment-button" type="submit">Add a
          comment</button>
      </div>
    </form>
  </section>

</section>

<script src="/js/comment.js"></script>